{
  "name": "vscode-language-scss",
  "version": "0.1.26",
  "license": "MIT",
  "publisher": "hscheue",
  "repository": {
    "type": "git",
    "url": "https://github.com/hscheue/vscode-language-scss.git"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [],
  "activationEvents": [
    "onLanguage:scss"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "ci": "(npm install); (npm run compile); (npx @vscode/vsce package)"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "contributes": {
    "configuration": {
      "title": "vscode-language-scss",
      "type": "object",
      "properties": {
        "vscode-language-scss.experimental.themeDiagnosticsFile": {
          "scope": "resource",
          "type": [
            "string",
            "array"
          ],
          "default": "",
          "description": "Enable experimental theme diagnostic highlighting"
        },
        "vscode-language-scss.experimental.themeMixinDiagnostics": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable experimental mixin theme diagnostics"
        }
      }
    }
  }
}
